extends ../../layouts/ui-layout.pug

block variables
	- var title = 'Комментарии - UI-kit и HTML фреймворк - Документация'
	- var pageClass = 'body--dashboard'

block content
	include ../../sections/ui-nav-inside-ui.pug

	.main-wrapper
		.container.container--left
			.title Комментарии
			.title-section.mb-1 Оставить комментарий
			.section-ui
				.comment-add
					.comment-add__avatar
						+avatar("../../../img/avatars/avatar-1.jpg", "Юрий Ключевский", "avatar--small")
					.comment-add__form
						.title-6.mt-0.mb-2 Юрий Ключевский
						+error('Комментарий не может быть пустым.')
						textarea(placeholder="Присоединиться к обсуждению...").textarea
						+button('Опубликовать','#')

