extends ../layouts/login.pug

block variables
	- var title = 'Вход на сайт'
	- var pageClass = 'login-page'

block content
	.login-page
		.container-fluid.pt-45.pl-100.pr-50
			.row.justify-content-between
				.col-md-auto
					+logo('Супер Сайт')
				.col-md-auto
					+link('Вход','#').login-page__link
		.container.login-page__block
			.row.align-items-center.justify-content-center
				.col-4
					form.login-page__form.text-center
						.title-1 Регистрация
						+errorWithDesc('Данный email уже занят')
							p Используйте другой email чтобы создать новый аккаунт.
							p Или воспользуйтесь #[a(href="#" target="_blank") восстановлением пароля], чтобы войти на сайт.
						+textInput('email', 'text', 'Email')
						+textInput('pasword', 'text', 'Пароль')
						+button-enter('Регистрация', '#')
		.container.pb-15
			.row.justify-content-center
				.col-md-auto.text-center.login-page__copyright
					p © Dream-Team
					p Создано с &nbsp
						i.fas.fa-heart
						| &nbsp в #[a(href='#' target='_blank') WebCademy.ru] в 2017 году
	
